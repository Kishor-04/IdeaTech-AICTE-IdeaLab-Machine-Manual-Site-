<!DOCTYPE html>
<html>

<head>
  <title>Teacher's sign-up</title>
  <link rel="icon" class="icon" href="../public/TECH (2).png" type="image/png">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet">
  <link rel="stylesheet" href="./public/signupTeacher.css">
  <link rel="stylesheet" href="/public/TeacherSlideshow.css">
  <script src="https://kit.fontawesome.com/a81368914c.js"></script>

</head>

<body>
  <div class="containerBox">
    <div class="container">
      <div class="signup-box">
        <h1>As Teacher</h1>
        <form action="/signupTeacher" method="POST" class="signup-form" enctype="multipart/form-data">

          <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade" id="first">
              <div class="input-div">
                <h5>Teacher's_ID</h5>
                <input type="text" name="teacher_id" required>
              </div>

              <div class="input-div">
                <h5>Teacher's_Name</h5>
                <input type="text" name="Name" required>
              </div>

              <p class="p1">Already have an account?<a href="/Login">Login </a></p>

              <div class="sliderSigns">
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
              </div>

            </div>

            <div class="mySlides fade" id="second">
              <div class="input-div">
                <h5>Username</h5>
                <input type="text" name="userName" required>
              </div>

              <div class="input-div">
                <h5>Email</h5>
                <input type="email" name="email" required>
              </div>

              <div class="input-div">
                <h5>Profile_image</h5>
                <div class="div">
                  <label for="file-upload" class="btn-upload">Choose File</label>
                  <input type="file" name="image" id="file-upload" class="input-file" onchange="updateFileName(this)">
                  <div id="file-name" class="file-name"></div>
                </div>
              </div>

              <p class="p1">Already have an account?<a href="/Login">Login </a></p>

              <div class="sliderSigns">
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
              </div>

            </div>

            <div class="mySlides fade" id="third">
              <h2>Set Password</h2>
              <div class="input-div">
                <h5>Password</h5>
                <input type="password" name="password" required>
              </div>

              <div class="input-div">
                <h5>Confirm_Password</h5>
                <input type="password" name="confirmPassword" required>
              </div>

              <input type="submit" class="button" value="Submit">

              <p class="p1">Already have an account?<a href="/Login">Login </a></p>

              <div class="sliderSigns">
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
              </div>

            </div>


          </div>
        </form>
      </div>
    </div>
    <div class="whiteBackground">
      <img class="signupPic" src="/public/SignupProfile.jpg" alt="">
    </div>
  </div>

  <script>
    // Update file name display when a file is selected
    function updateFileName(input) {
      var fileName = input.files[0].name;
      document.getElementById('file-name').textContent = 'Selected file: ' + fileName;
    }
  </script>

  <script src="/public/slideShow.js"></script>

</body>

</html>