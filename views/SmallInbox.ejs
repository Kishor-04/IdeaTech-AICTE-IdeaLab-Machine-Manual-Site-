        // Selecting the element with the class "fullBody"
        var container = document.getElementsByClassName("fullBody")[0];
        // var button = document.getElementsByClassName("fullBody")[0];
        function inbox() {
            // Checking if the style display property is set to "none"
            if (container.style.display === "none" || container.style.display === "") {
                container.style.display = "block";
            } else {
                container.style.display = "none"; // Toggle visibility
            }
